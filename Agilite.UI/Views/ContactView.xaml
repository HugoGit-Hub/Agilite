        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Contacts" Grid.Row="0" Margin="5"/>
            <ListView x:Name="contactListView" Grid.Row="2" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding NameContact}" Width="200"/>
                        <GridViewColumn Header="Archived" DisplayMemberBinding="{Binding IsArchivedContact}" Width="75"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
                <Button x:Name="addContactButton" Content="Add" Margin="0,0,5,0"/>
                <Button x:Name="editContactButton" Content="Edit" Margin="0,0,5,0"/>
                <Button x:Name="deleteContactButton" Content="Delete"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="5">
                <Button x:Name="closeButton" Content="Close"/>
            </StackPanel>
        </Grid>
</UserControl>
