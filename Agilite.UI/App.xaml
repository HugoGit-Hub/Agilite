<Application x:Class="Agilite.UI.App"
             StartupUri="Views/LoginView.xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:Agilite.UI"
             xmlns:converter="clr-namespace:Agilite.UI.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ColorsResource.xaml"/>
                <ResourceDictionary Source="Resources/DataTemplateResources.xaml" />
                <ResourceDictionary Source="Resources/MenuButtonResource.xaml"/>
                <ResourceDictionary Source="Resources/SearchBarResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ui:Container x:Key="Locator" />
            <converter:NonZeroConverter x:Key="NonZeroConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
