<logic:CustomWindow x:Class="Agilite.UI.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:logic="clr-namespace:Agilite.UI.Resources.Logic"
                    xmlns:controls="clr-namespace:Agilite.UI.Controls"
                    mc:Ignorable="d"
                    Height="500" 
                    Width="1000" 
                    FontSize="20">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <RadioButton
                    Content="Accueil"
                    Height="50"
                    Foreground="Wheat"
                    FontSize="14"
                    Style="{StaticResource MenuButtonResource}"/>

            <RadioButton
                    Content="Planning"
                    Height="50"
                    Foreground="Wheat"
                    FontSize="14"
                    Style="{StaticResource MenuButtonResource}"/>

            <RadioButton
                    Content="Contact"
                    Height="50"
                    Foreground="Wheat"
                    FontSize="14"
                    Style="{StaticResource MenuButtonResource}"/>
        </StackPanel>

        <Border Grid.Column="1"
                Background="#22202f">
            <controls:DefaultPageControl />
        </Border>
    </Grid>
</logic:CustomWindow>